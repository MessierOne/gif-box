{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "eslint-plugin-html"
  ],
  "extends": "eslint:recommended",
  "parser": "@typescript-eslint/parser",
  "rules": {
    "semi": "error"
  }
}
